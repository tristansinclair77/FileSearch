<Window x:Class="FileSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSearch"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Excessive File Search" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9FC">
    
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
    </Window.InputBindings>
    
    <!-- Main Container without Drop Shadow -->
    <Border Background="White" 
            CornerRadius="12" 
            Margin="15"
            Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title Section with Enhanced Styling (static) -->
            <Border Grid.Row="0" 
                    CornerRadius="8"
                    Padding="20,15"
                    Margin="0,0,0,25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" 
                                      BlurRadius="8" 
                                      Opacity="0.2"
                                      Color="#667EEA"/>
                </Border.Effect>
                <TextBlock Text="Excessive File Search" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="White"
                           FontFamily="Segoe UI"/>
            </Border>

            <!-- Scrollable Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Input Controls -->
                        <RowDefinition Height="Auto"/> <!-- Progress Section -->
                        <RowDefinition Height="Auto"/> <!-- Metadata Section -->
                        <RowDefinition Height="Auto"/> <!-- Results Label -->
                        <RowDefinition Height="*"/>   <!-- DataGrid -->
                        <RowDefinition Height="Auto"/> <!-- Status Bar -->
                    </Grid.RowDefinitions>

                    <!-- Input Controls Section with Two Panels Side by Side and One Below -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Section 1: Search Input, Depth Dropdown, and Search Button Panel (left) -->
                        <Border Grid.Row="0" Grid.Column="0"
                                Background="#F0F2F5"
                                BorderBrush="#D1D9E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Padding="20"
                                Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" 
                                                  BlurRadius="6" 
                                                  Opacity="0.1"
                                                  Color="#000000"/>
                            </Border.Effect>
                            <StackPanel Orientation="Vertical">
                                <!-- Search TextBox with Depth Dropdown to the right -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Search Pattern Label -->
                                    <TextBlock Grid.Row="0"
                                               Text="🔍 Search Path or Pattern:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"
                                               FontSize="14"
                                               Foreground="#2C3E50"/>
                                               
                                    <!-- Folder Depth Label (above the dropdown) -->
                                    <TextBlock Grid.Row="1"
                                               Text="📁 Folder Depth"
                                               FontWeight="SemiBold" 
                                               Margin="0,8,0,4"
                                               FontSize="12"
                                               HorizontalAlignment="Right"
                                               Foreground="#6B7280"/>
                                               
                                    <!-- Search Input and Depth Dropdown -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Search TextBox -->
                                        <Border Grid.Column="0"
                                                Background="White"
                                                BorderBrush="#D1D9E0"
                                                BorderThickness="2"
                                                CornerRadius="8"
                                                Margin="0,0,8,0">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1" 
                                                                  BlurRadius="3" 
                                                                  Opacity="0.1"
                                                                  Color="#000000"/>
                                            </Border.Effect>
                                            <TextBox x:Name="SearchTextBox" 
                                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                                     Height="40" 
                                                     FontSize="14" 
                                                     Padding="15,10" 
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     IsEnabled="{Binding IsNotSearching}"
                                                     Style="{DynamicResource ModernTextBoxStyle}">
                                                <TextBox.InputBindings>
                                                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                                                </TextBox.InputBindings>
                                            </TextBox>
                                        </Border>
                                        
                                        <!-- Depth Dropdown -->
                                        <Border Grid.Column="1"
                                                Background="White"
                                                BorderBrush="#D1D9E0"
                                                BorderThickness="2"
                                                CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1" 
                                                                  BlurRadius="3" 
                                                                  Opacity="0.1"
                                                                  Color="#000000"/>
                                            </Border.Effect>
                                            <ComboBox SelectedValue="{Binding MaxDepth}"
                                                      Height="40"
                                                      FontSize="13"
                                                      Padding="10,8"
                                                      BorderThickness="0"
                                                      Background="Transparent"
                                                      IsEnabled="{Binding IsNotSearching}"
                                                      Style="{DynamicResource ModernComboBoxStyle}">
                                                <ComboBox.ToolTip>
                                                    <ToolTip Content="Max folder depth to search (1-10)"/>
                                                </ComboBox.ToolTip>
                                                <sys:Int32>1</sys:Int32>
                                                <sys:Int32>2</sys:Int32>
                                                <sys:Int32>3</sys:Int32>
                                                <sys:Int32>4</sys:Int32>
                                                <sys:Int32>5</sys:Int32>
                                                <sys:Int32>6</sys:Int32>
                                                <sys:Int32>7</sys:Int32>
                                                <sys:Int32>8</sys:Int32>
                                                <sys:Int32>9</sys:Int32>
                                                <sys:Int32>10</sys:Int32>
                                            </ComboBox>
                                        </Border>
                                    </Grid>
                                </Grid>
                                <!-- Search and Stop Buttons (below search input field) -->
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{Binding SearchButtonContent}" 
                                            Command="{Binding SearchCommand}"
                                            Background="#3498DB" 
                                            Foreground="White" 
                                            Width="120" 
                                            Height="42" 
                                            FontWeight="Bold"
                                            FontSize="14"
                                            Margin="0,0,12,0"
                                            Cursor="Hand"
                                            Style="{DynamicResource SearchButtonStyle}"/>
                                    <!-- Stop Button -->
                                    <Button Content="🛑 Stop" 
                                            Command="{Binding StopCommand}"
                                            Background="#EF4444" 
                                            Foreground="White" 
                                            Width="80" 
                                            Height="42" 
                                            FontWeight="Bold"
                                            FontSize="14"
                                            Cursor="Hand"
                                            Style="{DynamicResource SearchButtonStyle}">
                                        <Button.ToolTip>
                                            <ToolTip Content="Stop the currently running search"/>
                                        </Button.ToolTip>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Section 2: Folder Selection Panel (right) -->
                        <Border Grid.Row="0" Grid.Column="1"
                                Background="#F0F2F5"
                                BorderBrush="#D1D9E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Padding="20"
                                Margin="10,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" 
                                                  BlurRadius="6" 
                                                  Opacity="0.1"
                                                  Color="#000000"/>
                            </Border.Effect>
                            <StackPanel Orientation="Vertical">
                                <!-- Selected Folder Path Display -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="📁 Selected Folder Path:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"
                                               FontSize="14"
                                               Foreground="#2C3E50"/>
                                    <Border Grid.Row="1"
                                            Background="White"
                                            BorderBrush="#D1D9E0"
                                            BorderThickness="2"
                                            CornerRadius="8">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1" 
                                                              BlurRadius="3" 
                                                              Opacity="0.1"
                                                              Color="#000000"/>
                                        </Border.Effect>
                                        <TextBox Text="{Binding SelectedFolderDisplayText, Mode=OneWay}"
                                                 Height="40" 
                                                 FontSize="14" 
                                                 Padding="15,10" 
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 IsReadOnly="True"
                                                 Foreground="#6B7280"
                                                 FontStyle="Italic"
                                                 Style="{DynamicResource ModernTextBoxStyle}"/>
                                    </Border>
                                </Grid>
                                <!-- Select Folder Button (below folder path field) -->
                                <Button Content="📁 Select Folder" 
                                        Command="{Binding SelectFolderCommand}"
                                        Background="#E74C3C" 
                                        Foreground="White" 
                                        Width="160" 
                                        Height="42" 
                                        FontWeight="SemiBold"
                                        FontSize="13"
                                        HorizontalAlignment="Left"
                                        Cursor="Hand"
                                        IsEnabled="{Binding IsNotSearching}"
                                        Style="{DynamicResource PrimaryButtonStyle}"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Section 3: Saved Searches Panel (full width below) -->
                        <Border Grid.Row="1" Grid.ColumnSpan="2"
                                Background="#F0F2F5"
                                BorderBrush="#D1D9E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Padding="20"
                                Margin="0,15,0,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" 
                                                  BlurRadius="6" 
                                                  Opacity="0.1"
                                                  Color="#000000"/>
                            </Border.Effect>
                            <StackPanel Orientation="Vertical">
                                <!-- Saved Searches Dropdown -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Text="💾 Saved Searches:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,8"
                                               FontSize="14"
                                               Foreground="#2C3E50"/>
                                    <Border Grid.Row="1"
                                            Background="White"
                                            BorderBrush="#D1D9E0"
                                            BorderThickness="2"
                                            CornerRadius="8">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1" 
                                                              BlurRadius="3" 
                                                              Opacity="0.1"
                                                              Color="#000000"/>
                                        </Border.Effect>
                                        <ComboBox ItemsSource="{Binding SavedSearches}"
                                                  SelectedItem="{Binding SelectedSavedSearch}"
                                                  Height="40"
                                                  FontSize="13"
                                                  Padding="15,8"
                                                  BorderThickness="0"
                                                  Background="Transparent"
                                                  IsEnabled="{Binding IsNotSearching}"
                                                  Style="{DynamicResource ModernComboBoxStyle}">
                                            <ComboBox.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="🗑️ Delete Selected" Command="{Binding DeleteSavedSearchCommand}" />
                                                    <MenuItem Header="🔄 Refresh List" Command="{Binding RefreshSavedSearchesCommand}" />
                                                </ContextMenu>
                                            </ComboBox.ContextMenu>
                                        </ComboBox>
                                    </Border>
                                </Grid>
                                <!-- Save and Load Buttons (below dropdown) -->
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="💾 Save Search" 
                                            Command="{Binding SaveSessionCommand}"
                                            Background="#F39C12" 
                                            Foreground="White" 
                                            Width="140" 
                                            Height="42" 
                                            FontWeight="SemiBold"
                                            FontSize="13"
                                            Margin="0,0,12,0"
                                            Cursor="Hand"
                                            Style="{DynamicResource PrimaryButtonStyle}"/>
                                    <Button Content="📥 Load Search" 
                                            Command="{Binding LoadSessionCommand}"
                                            Background="#27AE60" 
                                            Foreground="White" 
                                            Width="140" 
                                            Height="42" 
                                            FontWeight="SemiBold"
                                            FontSize="13"
                                            Cursor="Hand"
                                            Style="{DynamicResource PrimaryButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Progress Section -->
                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15">
                        <Border Background="#E8F4FD"
                                BorderBrush="#3498DB"
                                BorderThickness="1"
                                CornerRadius="6"
                                Visibility="{Binding ProgressBarVisibility}">
                            <ProgressBar Height="8" 
                                         Background="Transparent"
                                         Foreground="#3498DB"
                                         BorderThickness="0"
                                         IsIndeterminate="True"
                                         Margin="3"/>
                        </Border>
                    </StackPanel>

                    <!-- Search Session Metadata Section -->
                    <Border Grid.Row="2" BorderBrush="#10B981"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="20,15"
                            Margin="0,0,0,15"
                            Visibility="{Binding MetadataPanelVisibility}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E8F6F3" Offset="0"/>
                                <GradientStop Color="#F0FDF9" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" 
                                              BlurRadius="8" 
                                              Opacity="0.15"
                                              Color="#10B981"/>
                        </Border.Effect>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Session Info Header -->
                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                       Text="{Binding SessionHeaderText}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{Binding SessionHeaderForeground}"
                                       Margin="0,0,0,12"/>
                            
                            <!-- Left Column - Basic Info -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="{Binding MetadataSearchTerm}" 
                                           FontSize="13" 
                                           Foreground="#1F2937"
                                           Margin="0,3"/>
                                <TextBlock Text="{Binding MetadataSearchPath}" 
                                           FontSize="13" 
                                           Foreground="#1F2937"
                                           Margin="0,3"/>
                                <TextBlock Text="{Binding MetadataTimestamp}" 
                                           FontSize="13" 
                                           Foreground="#1F2937"
                                           Margin="0,3"/>
                            </StackPanel>
                            
                            <!-- Right Column - Statistics -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                                <TextBlock Text="{Binding MetadataTotalResults}" 
                                           FontSize="13" 
                                           Foreground="#1F2937"
                                           Margin="0,3"/>
                                <TextBlock Text="{Binding MetadataFileStats}" 
                                           FontSize="13" 
                                           Foreground="#1F2937"
                                           Margin="0,3"/>
                                <TextBlock Text="{Binding MetadataSearchDuration}" 
                                           FontSize="13" 
                                           Foreground="#1F2937"
                                           Margin="0,3"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Results Section Label -->
                    <TextBlock Grid.Row="3" Text="📋 Search Results:" 
                               FontWeight="Bold" 
                               Margin="0,0,0,12"
                               FontSize="16"
                               Foreground="#1F2937"/>

                    <!-- DataGrid for Results with Enhanced Styling -->
                    <Border Grid.Row="4" Background="White"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="10">
                        <DataGrid ItemsSource="{Binding SearchResults}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  AlternatingRowBackground="#FAFBFC"
                                  RowHeaderWidth="0"
                                  SelectionMode="Single"
                                  IsReadOnly="True"
                                  Style="{DynamicResource ModernDataGridStyle}"
                                  EnableRowVirtualization="True"
                                  EnableColumnVirtualization="True"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.IsDeferredScrollingEnabled="True">
                            
                            <DataGrid.Columns>
                                <!-- File Name Column -->
                                <DataGridTextColumn Header="📄 File Name" 
                                                    Binding="{Binding FileName}" 
                                                    Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding FileName}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <!-- Full Path Column -->
                                <DataGridTextColumn Header="📁 Full Path" 
                                                    Binding="{Binding FullPath}" 
                                                    Width="300">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding FullPath}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <!-- File Type Column -->
                                <DataGridTextColumn Header="📝 File Type" 
                                                    Binding="{Binding FileType}" 
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="ToolTip" Value="{Binding FileType}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <!-- Status Column -->
                                <DataGridTextColumn Header="🔍 Status" 
                                                    Binding="{Binding Status}" 
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Missing">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Available">
                                                    <Setter Property="Foreground" Value="#10B981"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <!-- Action Buttons Column -->
                                <DataGridTemplateColumn Header="⚡ Actions" Width="140" CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsMouseOver}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"
                                                            Margin="6,4">
                                                    <!-- Light Blue Folder Icon Button -->
                                                    <Button ToolTip="Open parent folder and highlight item"
                                                            Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#3B82F6" 
                                                            Foreground="White"
                                                            Width="32" 
                                                            Height="32" 
                                                            Margin="3,0"
                                                            Cursor="Hand"
                                                            Style="{DynamicResource ActionButtonStyle}">
                                                        <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2,4 4,4H10L12,6H19A2,2 0 0,1 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z" 
                                                              Fill="White" 
                                                              Stretch="Uniform" 
                                                              Width="16" 
                                                              Height="16"/>
                                                    </Button>
                                                    <!-- Purple Open Icon Button -->
                                                    <Button ToolTip="Open file or folder directly"
                                                            Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#8B5CF6" 
                                                            Foreground="White"
                                                            Width="32" 
                                                            Height="32" 
                                                            Margin="3,0"
                                                            Cursor="Hand"
                                                            Style="{DynamicResource ActionButtonStyle}">
                                                        <Path Data="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z" 
                                                              Fill="White" 
                                                              Stretch="Uniform" 
                                                              Width="16" 
                                                              Height="16"/>
                                                    </Button>
                                                    <!-- Pink Trash Icon Button -->
                                                    <Button ToolTip="Delete file or folder (send to recycle bin)"
                                                            Command="{Binding DataContext.DeleteFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#EF4444" 
                                                            Foreground="White"
                                                            Width="32" 
                                                            Height="32" 
                                                            Margin="3,0"
                                                            Cursor="Hand"
                                                            Style="{DynamicResource ActionButtonStyle}">
                                                        <Path Data="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z" 
                                                              Fill="White" 
                                                              Stretch="Uniform" 
                                                              Width="16" 
                                                              Height="16"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Height" Value="45"/>
                                    <Setter Property="MinHeight" Value="40"/>
                                    <!-- Remove DropShadowEffect for performance -->
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                            <Setter Property="Background" Value="#F9FAFB"/>
                                            <Setter Property="Foreground" Value="#9CA3AF"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EFF6FF"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#DBEAFE"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#1F2937" Offset="0"/>
                                                <GradientStop Color="#374151" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Height" Value="45"/>
                                    <Setter Property="Padding" Value="16,10"/>
                                    <Setter Property="BorderBrush" Value="#4B5563"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </Border>

                    <!-- Status Bar with Enhanced Styling -->
                    <Border Grid.Row="5" CornerRadius="8"
                            Margin="0,15,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#1F2937" Offset="0"/>
                                <GradientStop Color="#374151" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" 
                                              BlurRadius="6" 
                                              Opacity="0.15"
                                              Color="#000000"/>
                        </Border.Effect>
                        <StatusBar Background="Transparent" 
                                   Foreground="White"
                                   Height="35">
                            <StatusBarItem>
                                <TextBlock Text="{Binding StatusText}" 
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Padding="15,8"/>
                            </StatusBarItem>
                        </StatusBar>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
    
    <!-- Enhanced Styles -->
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="3" 
                                                  BlurRadius="6" 
                                                  Opacity="0.2"
                                                  Color="#000000"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="4" 
                                                          BlurRadius="8" 
                                                          Opacity="0.3"
                                                          Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Search Button Style -->
        <Style x:Key="SearchButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" 
                                                  BlurRadius="8" 
                                                  Opacity="0.25"
                                                  Color="#3498DB"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="5" 
                                                          BlurRadius="12" 
                                                          Opacity="0.35"
                                                          Color="#3498DB"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F618D"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" 
                                                  BlurRadius="4" 
                                                  Opacity="0.15"
                                                  Color="#000000"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="3" 
                                                          BlurRadius="6" 
                                                          Opacity="0.25"
                                                          Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" 
                                              BlurRadius="5" 
                                              Opacity="0.3"
                                              Color="#3498DB"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" 
                                              BlurRadius="5" 
                                              Opacity="0.3"
                                              Color="#3498DB"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- Legacy Styles for Compatibility -->
        <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}"/>
        <Style x:Key="SmallButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}"/>
        <Style x:Key="CompactButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}"/>
    </Window.Resources>
</Window>
